<header>
<!-- logo start -->
  <%= link_to root_path, class: "navbar-logo-section" do %>
    <div class="logo-glow-burrito">
      <div class="glow-background">
      </div>
      <%= image_tag "navbar-logo.png", class: "navbar-logo" %>
    </div>
  <% end %>
<!-- logo end -->

<!-- navbar links start -->
  <ul class="navbar-link-section">
    <li class="navbar-item">
      <%= link_to "Home", root_path, class: "navbar-link" %>
    </li>
    <li class="navbar-item">
      <%= link_to "medee", midis_path, class: "navbar-link" %>
    </li>
    <li class="navbar-item">
      <%= link_to "uploader", new_midi_path , class: "navbar-link" %>
    </li>
  </ul>
<!-- navbar links end -->

<!-- sign-in start -->
  <ul class="navbar-sign-in-section">
    <% if user_signed_in? %>
      <li class="username"> <%= current_user.username %></li>
      <li class="user-avatar nav-item dropdown">
        <% if current_user.photo.attached? %>
          <%= image_tag current_user.photo, class: "navbar-avatar" %>
        <% else %>
            <%= image_tag "profile-picture-placeholder.png", class: "navbar-avatar" %>
        <% end %></li>
      <div class="avatar-dropdown-menu">
        <li class="avatar-dropdown-item"><%= link_to "My profile", profile_path(current_user.profile), class: "navbar-link" %></li>
        <li class="avatar-dropdown-item"><%= link_to "Log out",  destroy_user_session_path, data: {turbo_method: :delete}, class: "navbar-link" %>
      </div>
    <% else %>
      <li class="navbar-item">
        <%= link_to "Log in", new_user_session_path, class: "navbar-link" %>
      </li>
    <% end %>
  </ul>
<!--  sign-in end  -->
</header>
