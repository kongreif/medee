<!--THE SEARCH FORM START -->
<div>
  <%= form_tag midis_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Browse midis"
    %>
    <%= submit_tag "Go", class: "btn btn-primary" %>
  <% end %>
</div>
<!-- THE SEARCH FORM END -->
<br>
<br>

<% @midis.each do |midi|%>
  <p><%= midi.title %></p>
<% end %>
