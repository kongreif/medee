<div class="show-description">
  <div class="show-description-artist">
  <% if @midi.user.photo.attached? %>
    <%= image_tag @midi.user.photo, class: "avatar-midi-show" %>
  <% else %>
      <%= image_tag "profile-picture-placeholder.png", class: "avatar" %>
      <!-- TODO: make image link to user profile -->
  <% end %>
    <p><%= link_to @midi.user.username, profile_path(@midi.user) %></p>
  </div>
  <div>
    <h3>description</h3>
    <%= @midi.description %>
  </div>
</div>
