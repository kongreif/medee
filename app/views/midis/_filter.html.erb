<div class="filter">
  <div class="filter-by">
    <%# <button id="filter-close-button">X</button> %>
    <p class="filter-by-title">filter by</p>
    <%# <button id="filter-save-button">save</button> %>
  </div>

  <div class="filter-category">
    <p class="mb-4">category</p>
    <!-- category example start (hard coded) -->
    <form action="/midis">
      <div>
        <input type="checkbox" id="lead" name="Lead" value="1" <%= "checked" if params[:Lead] %> >
        <label for="lead">Lead</label>
      </div>
      <div>
        <input type="checkbox" id="chords" name="Chords" value="2" <%= "checked" if params[:Chords] %>>
        <label for="chords">Chords</label>
      </div>
      <div>
        <input type="checkbox" id="pads" name="Pads" value="3">
        <label for="pads">Pads</label>
      </div>
      <div>
        <input type="checkbox" id="bassline" name="Bassline" value="4">
        <label for="bassline">Bassline</label>
      </div>
      <div>
        <input type="checkbox" id="drums" name="Drums" value="4">
        <label for="drums">Drums</label>
      </div>
      <div>
        <input type="checkbox" id="plucked" name="Plucked" value="4">
        <label for="plucked">Plucked</label>
      </div>
      <div class="category-submit-button-wrap d-flex justify-content-center">
      <input class="category-submit-button" type="submit" value="save">
      </div>
    </form>
    <!-- category example end -->
  </div>
</div>
