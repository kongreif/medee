<div class="midi-card" data-controller="play-midi" data-play-midi-url-value="<%= cloudinary_url(midi.midi_file.key) if  midi.midi_file.attached? %>">
  <div class="midi-card-play-button" data-action="click->play-midi#playOnClick">
    <svg width="52" height="51" viewBox="0 0 52 51" fill="none" xmlns="http://www.w3.org/2000/svg">
    <ellipse cx="25.6155" cy="25.1302" rx="25.6155" ry="25.1302" fill="#0085FF"/>
    <path d="M37.1706 25.1269L19.7526 35.9803L19.2491 15.0933L37.1706 25.1269Z" fill="white"/>
    </svg>
  </div>
  <div class="midi-card-details">
    <div class="midi-card-details-artist"><%= link_to midi.user.username, profile_path(midi.user) %></div>
    <div class="midi-card-details-row-2">
      <div class="midi-card-details-track"><%= link_to midi.title, midi_path(midi) %></div>
      <div><%= midi.category %></div>
    </div>
    <div class="midi-card-details-image">
      <!--
      # Charting / Plotting START
      # -------------------------------------------------------------------------------------
      -->
      <% json = JSON.parse(midi.midi_json) %>
      <% chart_data = [] %>
      <% arr_notes = json["tracks"][0]["notes"] %>
      <% arr_notes.each { |note| chart_data << [note["time"], note["midi"]] } %>
      <!-- # find the lowest note -->
      <% lowest_note = 127 %>
      <% arr_notes.each do |note| %>
        <% lowest_note = note["midi"] if note["midi"] < lowest_note %>
      <% end %>
      <!-- # find the highest note -->
      <% highest_note = 1 %>
      <% arr_notes.each do |note| %>
        <% highest_note = note["midi"] if note["midi"] > highest_note %>
      <% end %>
      <!-- # adjusted y-axis spectrum based on hightes/lowest note -->
      <% bottom = lowest_note - 5 %>
      <% bottom = 0 if bottom.negative? %>
      <% top = highest_note + 5 %>
       <!--
      # -------------------------------------------------------------------------------------
      # Charting / Plotting END
      -->

      <%= scatter_chart(chart_data, min: bottom, max: top, id: "users-chart", width: :inherit, height: "70px" ) %>
    </div>
    <div class="midi-card-details-bottom">
      <%= render "midi_card_buttons", midi: midi %>
      <%= render "midi_card_tags", midi: midi %>
      <div>128 bpm (still hardcoded)</div> <!-- TODO: replace with midi param -->
    </div>
  </div>
</div>
