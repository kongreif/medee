<div class="login-container">
  <div class="login-form-background-wrap">
    <div class="login-glow-background"></div>
    <div class="login-form-wrap">
      <div class="login-title text-center mb-5 mt-3">
        <h1>MEDEE</h1>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="buttons-wrap">
          <div>
            <%= f.button :submit, "Log in", class: "login-button", onMouseOver: "color:red", style: "border: 2px solid white; color: white; font-family: $body-font;
              text-transform: uppercase;" %>
          </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), style: "margin-top: 8px; color: #fd0d0dad;"%><br />
            <% end %>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name), class: "signup-link mt-4"%><br />
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
