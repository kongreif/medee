<div class="container col-3">
  <div class="text-center"><h1>Password Forgot?</h1></div>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions align-items-center text-center">
      <%= f.button :submit, "Reset password", class: "btn btn-light" %>
    </div>
  <% end %>
</div>
